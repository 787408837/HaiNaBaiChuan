<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="inputHint">
        <item name="android:textColor">@color/theme_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FloatingActionButtonLoginStyle">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:clickable">true</item>
        <item name="elevation">1dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="android:layerType">hardware</item>
        <item name="backgroundTint">@color/black</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@color/fab_highlight</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
    </style>
</resources>
